907. Sum of Subarray Minimums

https://leetcode.com/problems/sum-of-subarray-minimums/submissions/1892346521/

class Solution {
    public int[] getNSL(int arr[],int n){
        int res[]=new int[n];
        Stack<Integer> s = new Stack<>();
        for(int i=0;i<n;i++){
            while(!s.isEmpty() && arr[s.peek()]>arr[i]){
                s.pop();
            }
            res[i]=s.isEmpty()? -1 :s.peek();
            s.push(i);
        }
        return res;
    }
    public int[] getNSR(int arr[],int n){
        int res[]= new int[n];
        Stack<Integer> s= new Stack<>();
        for(int i=n-1;i>=0;i--){
            while(!s.isEmpty() && arr[s.peek()]>=arr[i]){
                s.pop();
            }
            res[i]=s.isEmpty()?n:s.peek();
            s.push(i);
        }
        return res;
    }

    public int sumSubarrayMins(int[] arr) {
        int n=arr.length;
        int NSL[]=getNSL(arr,n);
        int NSR[]=getNSR(arr,n);

        long s=0;
        for(int i=0;i<n;i++){
            long d1=i-NSL[i];
            long d2=NSR[i]-i;
            long total=d1*d2;
            long ways=arr[i]*total;
            s=(s+ways)%1000000007;
        }
        return (int)s;
    }
}
